// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  phone         String
  cpf           String
  date_of_birth DateTime
  description   String
  isBuyer       Boolean
  isAdvertiser  Boolean
  createdAt     DateTime @default(now())

  address Adress @relation(fields: [adressId], references: [id])

  adressId String
  comments  Comment[]
}

model Adress {
  id         String @id @default(uuid())
  state      String
  city       String
  district   String
  complement String
  zipCode    String
  number     Int
  user       User[]
}

model Announcement {
  id               String   @id @default(uuid())
  announcementType String
  title            String
  year             Int
  km               Int
  price            Int
  plate            String   @unique
  description      String
  vehicleType      String
  published        Boolean
  createdAt        DateTime @default(now())

  comments Comment[]
  images    Image[]
}

model Image {
  id       String @id @default(uuid())
  imageUrl String
  type     String

  Announcement   Announcement? @relation(fields: [announcementId], references: [id])
  announcementId String?
}

model Comment {
  id          String @id @default(uuid())
  description String

  user           User          @relation(fields: [userId], references: [id])
  Announcement   Announcement? @relation(fields: [announcementId], references: [id])
  announcementId String?
  userId         String
}
